#!/bin/sh

# taken from Luke Smith sb-internet
# https://github.com/LukeSmithxyz/voidrice/blob/master/.local/bin/statusbar/sb-internet

# Show wifi ï‡«  and percent strength or ïž if none.
# Show ïž– if connected to ethernet or ïœ•  if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ðŸ“¡: no wifi connection
ðŸ“¶: wifi connection with quality
âŽ: no ethernet
ðŸŒ: ethernet working
ï€£ : vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ïž " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ïœ•/;s/up/ïž–/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ï€£ /" /sys/class/net/tun*/operstate 2>/dev/null)"
